<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_hik_import_recent" model="ir.cron">
        <field name="name">HikCentral: Import Recent (24h)</field>
        <field name="model_id" ref="base.model_ir_cron"/>
        <field name="state">code</field>
        <field name="code">
            model.env['hikcentral.service'].import_range(fields.Datetime.subtract(fields.Datetime.now(), days=1), fields.Datetime.now())
        </field>
        <field name="interval_number">60</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active">False</field>
    </record>
</odoo>
